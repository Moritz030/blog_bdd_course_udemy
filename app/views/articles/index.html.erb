<%= link_to "New Article", new_article_path, class: "btn btn-default btn-lg", id: "new-article-btn" if user_signed_in? %>

<% if @articles.empty? %>
  <h1 id="no-articles">No Articles Created</h1>
<% else %>
  <% @articles.each do |article| %>
    <div class="bg-secondary rounded m-2">
      <div class="m-2" style="display: inline-block">
        <h5><%= link_to article.title, article_path(article) %></h5>
        <p><%= article.body %></p>
        <small>Created by: <%= article.user.email %></small>
      </div>
    </div>
  <% end %>
<% end %>