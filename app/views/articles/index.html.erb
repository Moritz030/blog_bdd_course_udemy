<%= link_to "New Article", new_article_path, class: "btn btn-default btn-lg", id: "new-article-btn" %>

<% @articles.each do |article| %>
  <div class="bg-secondary rounded m-2">
    <div class="m-2" style="display: inline-block">
      <h5><%= link_to article.title, article_path(article) %></h5>
      <p><%= article.body %></p>
    </div>
  </div>
<% end %>